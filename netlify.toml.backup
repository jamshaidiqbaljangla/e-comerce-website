[build]
  publish = "."
  # command = "npm install"  # Temporarily disabled due to Neon plugin issue

[build.environment]
  NODE_ENV = "production"
  
[functions]
  directory = "functions"
  node_bundler = "esbuild"

# Temporarily disable Neon plugin due to network issues
